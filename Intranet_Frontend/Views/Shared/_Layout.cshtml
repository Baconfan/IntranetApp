<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intranet_Frontend</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="bg-lightblue" class="navbar navbar-expand-lg border-bottom mb-3 fixed-top">
            <div class="container-fluid d-flex">
                <!-- Fixed Logo -->
                <div class="me-3 flex-shrink-0">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="margin-right: 0">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/2/2c/Emojione_BW_1F953.svg" alt="Brandlogo" height="36" />
                    </a>
                    Bacon. We love it.
                </div>

                <!-- Navigation Links -->
                <div class="navbar-collapse collapse justify-content-end flex-shrink-0" style="margin-right: 10px">
                    <ul class="navbar-nav">
                        @{
                            var title = ViewData["Title"] ?? "";
                        }
                        <li class="nav-item @(title.Equals("Home") ? "active" : "")">
                            <a class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Zur Startseite" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item  @(title.Equals("Wiki") ? "active" : "")">
                            <a class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Zum Unternehmenswiki" asp-area="" asp-controller="Wiki" asp-action="Index">Wiki</a>
                        </li>
                        <li class="nav-item @(title.Equals("Projects") ? "active" : "")">
                            <a class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Zur Übersicht von abgeschlossenen, laufenden und geplanten Projekten" asp-area="" asp-controller="Projects" asp-action="Index">Projekte</a>
                        </li>
                        <li class="nav-item @(title.Equals("Coworkers") ? "active" : "")">
                            <a class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Zur Sammlung von nützlichen externen Links" asp-area="" asp-controller="Coworkers" asp-action="Index">Mitarbeiter</a>
                        </li>
                        <li class="nav-item @(title.Equals("Help") ? "active" : "")">
                            <a class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ich brauche Hilfe." asp-area="" asp-controller="Help" asp-action="Index">Hilfe</a>
                        </li>
                    </ul>
                </div>

                <!-- Search bar -->
                <div class="ms-3 flex-shrink-0">
                    <form class="d-flex justify-content-center">
                        <input style="width: 300px" class="form-control me-2" id="search-input" type="search" placeholder="Suche nach Dokumenten, Mitarbeitern, ..." aria-label="Search">
                        <ul id="suggestions" class="dropdown-menu"></ul>
                        <button class="btn btn-outline-success" type="submit">Suche</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted">
        <div class="container">
        </div>
    </footer>
    <script src="~/js/bundle.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
